#!/bin/sh

set -e

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

. ${SCRIPT_DIR}/setupkit.sh.lib
. ${SCRIPT_DIR}/dx.sh.lib

usage_on_help "Stops all services, the container in which to run your app and removes any volumes" "" ${@}
ensure_docker_compose_env

log "ðŸš€" "Starting docker-compose.dx.yml"

log "ðŸš‰" "Exporting DOCKER_DEFAULT_PLATFORM as '${DOCKER_DEFAULT_PLATFORM}'"
export DOCKER_DEFAULT_PLATFORM
docker compose -f docker-compose.dx.yml -p "${PROJECT_NAME}" --env-file ${ENV_FILE} down -v

